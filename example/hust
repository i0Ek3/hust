#!/bin/bash

usage()
{
    echo "-------------------------------"
    echo "   Usage: $0 xxx"
    echo "-------------------------------"
}

if [ "$1" == "" ]
then
    usage
else
    rustc $1.rs

    echo "-------------------------------"
    echo "   Run"
    echo "-------------------------------"
        
    ./$1
        
    echo "-------------------------------"
    echo "   Done"
    echo "-------------------------------"
        
    rm $1
fi

